<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/miConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.example.javie.coffeapp.AddFavorCommunityActivity">

    <LinearLayout
        android:layout_width="349dp"
        android:layout_height="417dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.091">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:fontFamily="monospace"
            android:text="CHOOSE THE COMMUNITY"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/MORADO1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="71dp">

                <Button
                    android:id="@+id/button6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/MORADO1"
                    android:fontFamily="monospace"
                    android:text="Communnity 1"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="71dp">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/background_light"
                    android:fontFamily="monospace"
                    android:text="Communnity 2"
                    android:textColor="@color/MORADO1"
                    android:textSize="30sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="71dp">

                <Button
                    android:id="@+id/button8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/MORADO1"
                    android:fontFamily="monospace"
                    android:text="Community 3"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="71dp">

                <Button
                    android:id="@+id/button9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/background_light"
                    android:fontFamily="monospace"
                    android:text="Communnity 4"
                    android:textColor="@color/MORADO1"
                    android:textSize="30sp" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnCancelAF"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/background_light"
                android:text="CANCEL"
                android:textColor="@color/MORADO1"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>