<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.javie.coffeapp"
    android:versionCode="1"
    android:versionName="1.0.0">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <protected-broadcast android:name="android.intent.action.MEDIA_MOUNTED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/iconoaplicacion"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:parentActivityName=".LoginActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".LoginActivity"
            android:parentActivityName=".LoginActivity" />
        <activity android:name=".Splash_Screen" />
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme" />
        <activity android:name=".PerfilActivity" />
        <activity android:name=".ResetPassActivity" />
        <activity android:name=".ImagenProfileDialog" />
        <activity android:name=".AddFavorCommunityActivity" />
        <activity android:name=".AcceptFavorCommunityActivity" />
        <activity android:name=".CommunitiesActivity" />
        <activity android:name=".ListViewActivity" />
        <activity
            android:name=".SingleCommunityActivity"
            android:label="@string/title_activity_single_community"
            android:parentActivityName=".CommunitiesActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.javie.coffeapp.CommunitiesActivity" />
        </activity>
        <activity android:name=".MyFavorsActivity"></activity>
    </application>

</manifest>